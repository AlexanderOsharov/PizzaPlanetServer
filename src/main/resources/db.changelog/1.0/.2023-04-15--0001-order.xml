<?xml version="1.0" encoding="utf-8" ?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
                    http://www.liquibase.org/xml/ns/dbchangelog-ext
                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2023-04-15--0001-order" author="ntropin">
        <preConditions>
            <not>
                <tableExists tableName="Order"/>
            </not>
        </preConditions>

        <createTable tableName="Order">
            <column name="OrderID"
                    type="NUMERIC(15, 0)"
                    autoIncrement="true">

                <constraints
                        nullable="false"
                        primaryKey="true"
                        references="User(UserID)"
                        deleteCascade="true"/>
            </column>

            <column name="Name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="Phone" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>

            <column name="Address" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>

            <column name="Pizzas" type="VARCHAR(150)">
                <constraints nullable="false"
                             references="Pizza(TitleID)"
                             deleteCascade="true"/>
            </column>

            <column name="Images" type="VARCHAR(500)">
                <constraints nullable="false"
                             references="Pizza(picPizzaUrl)"
                             deleteCascade="true"/>
            </column>

            <column name="Prices" type="VARCHAR(300)">
                <constraints nullable="false"
                             references="Pizza(Price)"
                             deleteCascade="true"/>
            </column>

            <column name="UserID" type="NUMERIC(15, 0)">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>
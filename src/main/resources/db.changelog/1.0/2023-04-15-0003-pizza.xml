<?xml version="1.0" encoding="utf-8" ?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
                    http://www.liquibase.org/xml/ns/dbchangelog-ext
                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2023-04-15--0003-зшяяф" author="ntropin">
        <preConditions>
            <not>
                <tableExists tableName="Pizza"/>
            </not>
        </preConditions>

        <createTable tableName="Pizza">
            <column name="TitleID"
                    type="NUMERIC(15, 0)"
                    autoIncrement="true">

                <constraints
                        nullable="false"
                        primaryKey="true"
                        references="Order(Pizzas)"
                        deleteCascade="true"/>
            </column>

            <column name="picPizzaUrl" type="VARCHAR(30)">
                <constraints nullable="false"
                             references="Order(Images)"/>
            </column>

            <column name="Price" type="VARCHAR(30)">
                <constraints nullable="false"
                             references="Order(Prices)"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>